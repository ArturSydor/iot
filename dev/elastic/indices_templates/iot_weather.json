{
  "index_patterns": [
    "iot_*_weather"
  ],
  "template": {
    "settings": {
      "number_of_replicas": 0
    },
    "mappings": {
      "dynamic": "strict",
      "properties": {
        "id": {
          "type": "keyword"
        },
        "timestamp": {
          "type": "date"
        },
        "tenant_id": {
          "type": "keyword"
        },
        "token": {
          "type": "keyword"
        },
        "air_temperature": {
          "type": "scaled_float",
          "scaling_factor": 100
        },
        "wet_bulb_temperature": {
          "type": "scaled_float",
          "scaling_factor": 100
        },
        "humidity": {
          "type": "scaled_float",
          "scaling_factor": 100
        },
        "rain_intensity": {
          "type": "scaled_float",
          "scaling_factor": 100
        },
        "interval_rain": {
          "type": "scaled_float",
          "scaling_factor": 100
        },
        "total_rain": {
          "type": "scaled_float",
          "scaling_factor": 100
        },
        "wind_direction": {
          "type": "scaled_float",
          "scaling_factor": 100
        },
        "wind_speed": {
          "type": "scaled_float",
          "scaling_factor": 100
        },
        "max_wind_speed": {
          "type": "scaled_float",
          "scaling_factor": 100
        },
        "barometric_pressure": {
          "type": "scaled_float",
          "scaling_factor": 100
        },
        "solar_radiation": {
          "type": "scaled_float",
          "scaling_factor": 100
        }
      }
    }
  }
}