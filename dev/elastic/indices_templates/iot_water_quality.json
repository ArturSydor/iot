{
  "index_patterns": [
    "iot_*_water_quality"
  ],
  "template": {
    "settings": {
      "number_of_replicas": 0
    },
    "mappings": {
      "dynamic": "strict",
      "properties": {
        "id": {
          "type": "keyword"
        },
        "timestamp": {
          "type": "date"
        },
        "tenant_id": {
          "type": "keyword"
        },
        "token": {
          "type": "keyword"
        },
        "water_temperature": {
          "type": "scaled_float",
          "scaling_factor": 100
        },
        "turbidity": {
          "type": "scaled_float",
          "scaling_factor": 100
        },
        "transducer_depth": {
          "type": "scaled_float",
          "scaling_factor": 100
        },
        "wave_height": {
          "type": "scaled_float",
          "scaling_factor": 100
        },
        "wave_period": {
          "type": "integer"
        }
      }
    }
  }
}